<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="socialnetwork.controller.SentRequests"
            stylesheets="@../css/style.css"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <VBox>
            <Label prefHeight="50" text="SENT REQUESTS FROM"/>
            <Label fx:id="userLbl" prefHeight="50"/>
            <TableView fx:id="requests">
                <columns>
                    <TableColumn fx:id="to" prefWidth="150" text="TO" />
                    <TableColumn fx:id="status" prefWidth="150" text="STATUS" />
                    <TableColumn  fx:id="dataR" prefWidth="150" text="DATA"/>
                </columns>

            </TableView>

        </VBox>
        <VBox >
            <Button fx:id="rmBtn" onAction="#handleRmReq" text="REMOVE REQUEST"/>
        </VBox>
    </HBox>


</AnchorPane>
