<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="socialnetwork.controller.LogInController"
            stylesheets="@../css/login.css"


            prefHeight="400.0" prefWidth="400.0">
    <VBox prefWidth="500.0" alignment="CENTER_RIGHT">
        <Label/>
        <HBox prefWidth="500" prefHeight="200" >
            <ImageView  opacity="70" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/LogIn.gif" />
                </image>
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </ImageView>
            <Label  prefHeight="200" alignment="CENTER_RIGHT" text="        SOCIAL NETWORK"  />
        </HBox>
        <Label/>
        <Button  onAction="#handleNewUser" alignment="CENTER_LEFT" text="NEW USER"/>
        <Text/>
        <Button   onAction="#handleLogIn"  alignment="CENTER" text="   LOG IN   "/>
    </VBox>

</AnchorPane>
