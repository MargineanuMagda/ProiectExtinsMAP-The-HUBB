                                                    <Label prefHeight="30"/>
                                                    <Button  onAction="#handleCreateEvent" text="DONE"/>


                                                </VBox>
                                            </HBox>
                                        </HBox>
                                    </VBox>



                                </content>
                            </Tab>
                            <Tab text="YOUR EVENTS">
                                <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                    <VBox alignment="CENTER">
                                        <Label/>
                                        <HBox>
                                            <Label text="       "/>
                                            <ImageView  fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                                <image>
                                                    <Image url="@../images/T0WC.gif" />
                                                </image>

                                            </ImageView>
                                            <Label text="       "/>
                                            <VBox>
                                                <Label/>
                                                <ComboBox fx:id="eventCombo" stylesheets="@../css/login.css" promptText="/choose an event"/>
                                                <Label/>
                                                <Button onAction="#handleSubscribeEvent" text="SUBSCRIBE"/>
                                            </VBox>
                                        </HBox>
                                        <ImageView  fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/yourEv.png" />
                                            </image>

                                        </ImageView>
                                        <HBox>
                                            <Label text="   "/>
                                            <TableView  fx:id="tableEvents" prefWidth="350">
                                                <columns>
                                                    <TableColumn prefWidth="150" fx:id="nameEvent" text="Name"/>
                                                    <TableColumn   prefWidth="100" fx:id="dataEvent" text="Date"/>
                                                    <TableColumn prefWidth="100" fx:id="timeEvent" text="Time"/>
                                                </columns>
                                            </TableView>
                                            <Label text="       "/>
                                            <Button  onAction="#handleUnsubscribeEvent" text="UNSUBSCRIBE"/>

                                        </HBox>

                                    </VBox>

                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>
