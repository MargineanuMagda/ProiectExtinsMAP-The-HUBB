                                                        <ImageView  fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../images/min.png" />
                                                            </image>

                                                        </ImageView>
                                                        <Spinner min="0" max="59" fx:id="evMin"/>
