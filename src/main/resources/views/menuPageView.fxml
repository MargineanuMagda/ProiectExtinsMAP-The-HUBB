                                                    <image>
                                                        <Image url="@../images/ev.gif" />
                                                    </image>
                                                    <VBox.margin>
                                                        <Insets left="10.0" />
                                                    </VBox.margin>
                                                </ImageView>
                                                <!-- <Label text="       " />-->

                                            </VBox>
                                            <HBox>


                                                <VBox prefWidth="400" >

                                                    <Label prefHeight="35"/>
                                                    <HBox alignment="CENTER_RIGHT">
                                                        <ImageView  fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../images/name.png" />
                                                            </image>

                                                        </ImageView>
                                                        <TextField fx:id="evName"/>
                                                    </HBox>
                                                    <Label prefHeight="30"/>
                                                    <HBox alignment="CENTER_RIGHT">
                                                        <ImageView  fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../images/date.png" />
                                                            </image>

                                                        </ImageView>
                                                        <DatePicker fx:id="evDate"/>
                                                    </HBox>
                                                    <Label prefHeight="30"/>
                                                    <HBox alignment="CENTER_RIGHT">
                                                        <ImageView  fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../images/hour.png" />
                                                            </image>

                                                        </ImageView>
                                                        <Spinner min="0" max="23"  fx:id="evHour"/>

                                                    </HBox>
                                                    <Label prefHeight="30"/>
