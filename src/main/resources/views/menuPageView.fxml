        <!--TAB YOUR PROFILE-->


        <Tab text="Your profile">
            <graphic>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <Image url="@../images/network.png"/>
                </ImageView>
            </graphic>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="700" prefWidth="900">
                <HBox>
                    <Label text="       "/>
                    <VBox>

                        <Label/>
                        <HBox>
                            <ImageView onMouseClicked="#handleLogOut" fitHeight="70.0" fitWidth="82.0"
                                       pickOnBounds="true"
                                       preserveRatio="true">
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                                <Image url="@../images/network.png"/>
                            </ImageView>
                            <HBox>
                                <Label text=" THE H" style="-fx-font-size: 30" prefHeight="50.0">

                                </Label>
                                <Label text="UBB" style="-fx-text-fill:#5396bd" prefHeight="50.0">

                                </Label>
                            </HBox>


                        </HBox>

                        <Label prefHeight="10"/>
                        <Label text="HELLO,"/>
                        <Label fx:id="lbl"/>
                        <Label prefHeight="25"/>
                        <HBox>
                            <ImageView fitHeight="30.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                                <HBox.margin>
                                    <Insets left="10.0"/>
                                </HBox.margin>
                                <Image url="@../images/64508.png"/>
                            </ImageView>
                            <Label stylesheets="@../css/style.css" text="  FRIENDS" alignment="CENTER_RIGHT"
                                   prefHeight="40">

                            </Label>
                        </HBox>

                        <TableView fx:id="friends">
                            <columns>
                                <TableColumn prefWidth="150" text="FIRSTNAME" fx:id="firstname"/>
                                <TableColumn prefWidth="150" text="LASTNAME" fx:id="lastname"/>
                            </columns>

                        </TableView>
                        <Pagination fx:id="pagFriends" prefWidth="200.0" pageCount="10"
                                    onMouseClicked="#handleChangePage">

                        </Pagination>
                        <HBox>
                            <Label style="-fx-font-size: 15" text="Elements on a page"/>
