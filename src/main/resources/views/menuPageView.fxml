                                            <ImageView  fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                                                <image>
                                                    <Image url="@../images/1.png" />
                                                </image>

                                            </ImageView>
                                        </HBox>

                                        <HBox>
                                            <VBox alignment="BASELINE_CENTER" prefHeight="200">
                                                <Label prefHeight="50"/>
